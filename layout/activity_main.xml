<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/mLlayoutBottomButtons"
        android:background="@color/white"
        >


    </RelativeLayout>

    <fragment
        android:layout_above="@+id/mLlayoutBottomButtons"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:name="com.example.cyrusli.petcarev2.BlankFragment"
        android:id="@+id/fragment_blank"/>

    <GridLayout
        android:id="@+id/mLlayoutBottomButtons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_pets_black_24dp"
            android:layout_row="1"
            android:layout_marginRight = "-8dip"
            android:layout_marginLeft = "-6dip"
            android:background="@drawable/mainbutton"
            android:layout_column="0" />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_info_outline_black_24dp"
            android:layout_row="1"
            android:layout_marginRight = "-8dip"
            android:layout_marginLeft="-8dip"
            android:background="@drawable/mainbutton"
            android:layout_column="1" />
        <ImageButton
            android:id="@+id/button3"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_local_hospital_black_24dp"
            android:layout_row="1"
            android:layout_marginRight = "-8dip"
            android:layout_marginLeft="-8dip"
            android:background="@drawable/mainbutton"
            android:layout_column="2" />
        <ImageButton
            android:id="@+id/button4"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_location_city_black_24dp"
            android:layout_row="1"
            android:layout_marginRight = "-8dip"
            android:layout_marginLeft="-8dip"
            android:background="@drawable/mainbutton"
            android:layout_column="3" />
        <ImageButton
            android:id="@+id/button5"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_search_black_24dp"
            android:background="@drawable/mainbutton"
            android:layout_row="1"
            android:layout_marginLeft="-8dip"
            android:layout_column="4" />
    </GridLayout>

</RelativeLayout>